                    },
                    "data": {
                        "type": "object",
                        "properties": {
                            "email": {
                                "type": "string",
                                "description": "Nome do cliente",
                                "example": "nomedocliente@dominio.com.br"
                            },
                            "password": {
                                "type": "string",
                                "description": "Senha de acesso",
                                "example": "wqeohiewuihfskgr"
                            }
                        }
                    }
                }
            },
            "ResponseHealtchCheck": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Nome API",
                        "example": "Título API"
                    },
                    "version": {
                        "type": "string",
                        "description": "Versão do sistema",
                        "example": "0.0.1"
                    }
                }
            },
            "RequestIdCliente": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "name": "id",
                  "description": "Id do cliente",
                  "required": true,
                  "format": "guid"
                }
              }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "decription": "Autenticação utilizando JWT",
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}